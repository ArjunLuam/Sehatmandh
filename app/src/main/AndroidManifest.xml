<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mask_detector">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/heart"
        android:label="@string/app_name"
        android:roundIcon="@drawable/heart"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="activities.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SurDetailActivity" />
        <activity android:name=".activities.SurveillanceActivity" />
        <activity android:name=".activities.ReadContentActivity" />
        <activity android:name=".activities.ShowRecommendedActivity" />
        <activity android:name=".activities.AllContentActivity" />
        <activity android:name=".activities.ReadArticle" />
        <activity android:name=".activities.ReadArticleActivity" />
        <activity android:name=".About_us" />
        <activity android:name=".activities.GetQrDocActivity" />
        <activity android:name=".activities.ShareQRActivity" />
        <activity android:name=".activities.ShowDocActivity" />
        <activity android:name=".activities.HomeActivity" />
        <activity android:name=".activities.UploadDocActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".auth.Login" />
    </application>

</manifest>